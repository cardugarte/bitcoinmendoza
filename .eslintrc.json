// .eslintrc.json
{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended" // Integraci√≥n con Prettier
  ],
  "parserOptions": {
      "ecmaVersion": 12
  },
  "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
  }
}